<?xml version="1.0" encoding="utf-8"?>
<com.kingsun.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.kingsun.percent.support.PercentRelativeLayout
        android:id="@+id/top_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"  
        app:layout_heightPercent="11%w" 
        android:background="@drawable/top_bg"
         >
         <TextView
            android:id="@+id/title_tv"
            app:layout_heightPercent="11%w"     
         	android:layout_width="match_parent"
         	android:layout_height="0dp"
         	android:gravity="center"
         	android:text="打印预览"
         	app:layout_textSizePercent="6%w"         	  
         	android:textColor="#fff"
         	android:layout_centerVertical="true"
         />
         <ImageView 
             android:id="@+id/file_iv"
             android:text="文 件"
             android:textSize="20sp"     
         	 android:textColor="#fff"
             android:layout_marginLeft="8dp"
             android:layout_marginTop="8dp"
             android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"        	
        	 android:layout_centerVertical="true"
             />	  
          <ImageView 
             android:id="@+id/print_iv"            
             android:layout_marginRight="8dp"       
             android:layout_width="0dp"
        	 android:layout_height="0dp"   
        	 app:layout_heightPercent="9%w"            
             app:layout_widthPercent="9%w"
        	 android:layout_alignParentRight="true"     	
        	 android:layout_centerVertical="true"
        	 android:background="@drawable/printer"
             />	  
	 </com.kingsun.percent.support.PercentRelativeLayout>
	<ImageView 
	    android:layout_below="@+id/top_bg"
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:id="@+id/print_image"
    	
	    />	
</com.kingsun.percent.support.PercentRelativeLayout>

