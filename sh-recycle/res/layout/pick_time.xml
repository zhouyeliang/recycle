<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01000000"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DrawerLayoutActivity" >

   <RelativeLayout 
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/write_background_corner">

        
        <TextView 
            android:id="@+id/picktime_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="确认取货时间"
            android:gravity="center"
            android:textSize="@dimen/thirtyfour_px"/>
        
       <ImageView 
            android:id="@+id/picktime_whell"
            android:layout_below="@id/picktime_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg"/>
        <LinearLayout 
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/picktime_whell"
            android:orientation="horizontal"
            android:gravity="center">
            <Button 
            	android:id="@+id/pick_cancel"
            	android:layout_width="120dp"
            	android:layout_height="35dp"
            	android:text="@string/button_cancel"
            	android:textColor="#ffffff"
            	android:textSize="@dimen/thirty_px"
            	android:background="@drawable/button_background_grey"/>
        	<Button 
        	    android:layout_marginLeft="14dp"
            	android:id="@+id/pick_ok"
            	android:layout_width="120dp"
            	android:layout_height="35dp"
            	android:text="@string/button_ok"
            	android:textColor="#ffffff"
            	android:textSize="@dimen/thirty_px"
            	android:background="@drawable/button_background_orange"/>
        </LinearLayout>
        
        
    </RelativeLayout>
   

</RelativeLayout>
