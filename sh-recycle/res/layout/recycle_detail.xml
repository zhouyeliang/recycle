<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DrawerLayoutActivity" >

    <RelativeLayout 
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:background="@drawable/write_background_corner_no_padding"
        android:layout_height="360dp">

        <LinearLayout 
            android:id="@+id/detail_title_linear"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView 
	            android:id="@+id/detail_back"
	            android:layout_marginLeft="17dp"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_gravity="center"
	            android:src="@drawable/ciose"/>
        
        	<TextView 
	            android:id="@+id/detail_title"
	            android:layout_width="match_parent"
	            android:layout_height="45dp"
	            android:layout_marginRight="37dp"
	            android:textColor="#4d4d4d"
	            android:text="废书刊杂志"
	            android:gravity="center"
	            android:textSize="@dimen/thirtyfour_px"/>
        </LinearLayout>
        
        
       <ImageView 
            android:id="@+id/detail_image"
            android:layout_below="@id/detail_title_linear"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#ffffff"/>
       
        <LinearLayout 
            android:id="@+id/detail_num_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_image"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">
            <TextView 
	            android:layout_marginLeft="17dp"
	            android:id="@+id/detail_num"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#F03D5C"
	            android:text="0.8积分"
	            android:textSize="@dimen/thirtyeight_px"/>
        
	        
        </LinearLayout>
        
         
         <TextView 
            android:id="@+id/detail_dec"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_below="@id/detail_num_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3f3f3f"
            android:text="相关描述相关描述相关描述相关描述相关描述相关描述相关描述相关描述"
            android:textSize="@dimen/twentysix_px"/>
         
         <LinearLayout 
             android:id="@+id/sub_add_linear"
             android:layout_marginLeft="27dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal"
             android:layout_below="@id/detail_dec"
             android:layout_marginTop="2dp">

             <Button
                 android:layout_gravity="center_vertical"
                 android:id="@+id/sub_button"
                 android:layout_height="31dp"
                 android:layout_width="31dp"
                 android:background="@drawable/subtract" />

        	<TextView 
        	    android:layout_gravity="center_vertical"
        	    android:id="@+id/the_num_text"
        	    android:layout_width="32dp"
        	    android:layout_height="wrap_content"
        	    android:gravity="center"
        	    android:text="1"
        	    android:textColor="#4d4d4d"
        	    android:textSize="@dimen/thirtyfour_px"/>
        	<Button
        	    android:layout_gravity="center_vertical"
                 android:id="@+id/add_button"
                 android:layout_height="31dp"
                 android:layout_width="31dp"
                 android:background="@drawable/add" />
			
        	<LinearLayout 
        	    android:layout_gravity="center_vertical"
        	    android:layout_width="match_parent"
        	    android:layout_height="35dp"
        	    android:orientation="horizontal"
        	    android:gravity="right">
        	    <Button
        	    	android:id="@+id/order_button"
        	    	android:layout_width="74dp"
        	    	android:layout_height="35dp"
        	    	android:layout_marginRight="15dp"
        	    	android:text="选好了"
        	    	android:textColor="#ffffff"
        	    	android:textSize="@dimen/thirty_px"
        	    	android:background="@drawable/button_background_orange_nopadding"
        	    	android:gravity="center" />
        	</LinearLayout>
        	
        	
         </LinearLayout>
         
        	
        
    </RelativeLayout>
   

</RelativeLayout>
